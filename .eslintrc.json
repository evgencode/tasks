{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "root": true,
  "extends": [
    "prettier",
    "prettier/standard",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "es6": true,
    "node": true,
    "worker": true
  },
  "rules": {
    "prettier/prettier": [2, {"singleQuote": true, "semi": false, "printWidth": 100}],
    "overrides": [
      {
        "files": ["*.test.js", "*.spec.js"],
        "rules": {
          "no-unused-expressions": "off",
          "max-len": ["error", { "code": 900 }]
        }
      }
    ]
  }
}